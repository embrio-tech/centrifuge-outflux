{
  "model": "Entity",
  "pipeline": [
    {
      "$match": {
        "type": "loan"
      }
    },
    {
      "$lookup": {
        "from": "sources",
        "localField": "_id",
        "foreignField": "entity",
        "as": "sources"
      }
    },
    {
      "$unwind": "$sources"
    }
  ]
}
